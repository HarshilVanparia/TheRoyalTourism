                        </div>
                        <div class="card-content" style="background-color: #EEE8F6 !important;">
                            <div class="d-flex justify-content-center gap-5">
                                <div class="location ">
                                    <img src="/Images/Icons/time.png" loading="lazy" class="img-fluid me-1" alt="icon">
                                    @a.Atime Hours
                                </div>
                                <div class="location">
                                    <img src="/Images/Icons/location.png" loading="lazy" class="img-fluid me-1" alt="icon">
                                    @a.Alocation
                                </div>
                                <div class="location">
                                    <img src="/Images/Icons/activity.png" loading="lazy" class="img-fluid me-1" alt="icon">
                                    @a.Aactivity
                                </div>
                            </div>
                            <p class="price text-center ">
                                @a.Adetail
                            </p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
