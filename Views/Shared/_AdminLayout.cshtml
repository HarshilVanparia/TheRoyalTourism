@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Favicons -->
    <link href="~/Images/logo.svg" rel="icon" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet" />
</head>
<body>
    <!-- ======= Header ======= -->
    <header class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a href="@Url.Action("Index", "Admin")" class="logo d-flex align-items-center">
                <img src="~/Images/logo.svg" alt="">
                <span class="d-none d-lg-block px-2 fs-5 main-text">The Royal Tourism</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div>

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">
                <li class="nav-item dropdown">
                    <a class="nav-link nav-profile d-flex align-items-center mx-4" href="#" data-bs-toggle="dropdown">
                        <img class="rounded-circle" style="width: 2.6rem;" src="~/Images/logo.svg">
                        <span class="d-none d-md-block dropdown-toggle ps-2">UserName</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Profile", "Admin")">
                                <i class="bi bi-person"></i> My Profile
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Logout", "Account")">
                                <i class="bi bi-box-arrow-right"></i> Sign Out
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
    </header>
    <!-- End Header -->
    <!-- Sidebar -->
    <aside class="sidebar">
        <ul class="sidebar-nav">
            <li class="nav-item active">
                <a class="nav-link " href="@Url.Action("Dashboard", "Admin")">
                    <i class="bi bi-grid"></i> <span>Royal Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link " href="@Url.Action("Forms", "Admin")">
                    <i class="bi bi-newspaper"></i> <span>Royal Forms</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link " href="@Url.Action("DataTables", "Admin")">
                    <i class="bi bi-layout-text-window-reverse"></i> <span>Data Tables</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link " href="@Url.Action("Packages", "Admin")">
                    <i class="bi bi-layout-text-window-reverse"></i> <span>Packages</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link @(ViewData["ActivePage"] == "Details" ? "active" : "")" href="@Url.Action("Details", "Admin")">
                    <i class="bi bi-layout-text-window-reverse"></i> <span>Details</span>
                </a>
            </li>

        </ul>
    </aside>
    <!-- End Sidebar -->
    <!-- Main Content -->
    <main id="main" class="main">
        @RenderBody()
    </main>

    <!-- Back to Top -->
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>

    <!-- Scripts -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/main.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
