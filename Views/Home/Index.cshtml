                        <div class="slide">
                            <a asp-controller="Destination" asp-action="PackagesPage" asp-route-id="@dest.Did">
                                <img src="~/uploads/@dest.Dimg" alt="Place 1" />
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>

    </div>
