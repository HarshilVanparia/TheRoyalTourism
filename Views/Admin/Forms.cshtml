                            <label class="form-label">Thumbnail</label>
                            <input type="file" name="DestinationImage" class="form-control" />
                            <span class="text-danger" asp-validation-for="Destination.DImg"></span>
                        </div>

                        <div class="col-md-12">
                            <label class="form-label">Destination Type</label>
                            <select asp-for="Destination.DType" class="form-select">
                                <option hidden value="">Select</option>
