@model TheRoyalTourism.Models.AllModels

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Forms";
}

<div class="pagetitle">
    <h1>Forms</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Dashboard" asp-controller="Admin">Home</a>
            </li>
            <li class="breadcrumb-item active">Forms</li>
        </ol>
    </nav>
</div>

<section class="section">

    @* row 1 *@
    <div class="row">
        @* Add User *@
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add User</h5>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }
                    <form method="post" asp-controller="Admin" asp-action="AddUser" class="row g-3">
                        <div class="col-md-12">
                            <label class="form-label">Full Name</label>
                            <input class="form-control" asp-for="User.FullName" />
                            <span class="text-danger" asp-validation-for="User.FullName"></span>
                        </div>

                        <div class="col-md-12">
                            <label class="form-label">Email</label>
                            <input class="form-control" asp-for="User.Email" />
                            <span class="text-danger" asp-validation-for="User.Email"></span>
                        </div>

                        <div class="col-md-12">
                            <label class="form-label">Phone Number</label>
                            <input class="form-control" asp-for="User.PNumber" />
                            <span class="text-danger" asp-validation-for="User.PNumber"></span>
                        </div>

                        <div class="col-md-12">
                            <label class="form-label">Password</label>
                            <input class="form-control" asp-for="User.Password" type="password" />
                            <span class="text-danger" asp-validation-for="User.Password"></span>
                        </div>

                        <div class=" text-center">
                            <button type="submit" class="royalbutton col-md-12">Submit</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

