                                <option value="International">International</option>
                            </select>
                            <span class="text-danger" asp-validation-for="Destination.DType"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="royalbutton col-md-12">Submit</button>
                        </div>
                    </form>


