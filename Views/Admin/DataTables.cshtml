@model TheRoyalTourism.Models.AdminDataTablesViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "DataTables";
}

<div class="pagetitle">
    <h1>Data Tables</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Dashboard" asp-controller="Admin">Home</a>
            </li>
            <li class="breadcrumb-item active">Data Tables</li>
        </ol>
    </nav>
</div>


<style>
    .btn-royal {
        background-color: #8C387C;
        color: white;
    }

    .royalicon {
        background-color: #8C387C;
        color: white;
        border-radius: 4px;
        padding-block: 0.4rem;
        padding-inline: 0.7rem;
    }
</style>

<section class="section">
    <div class="row">

        <!-- Users  Table -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <table class="table datatable table-hover table-responsive-xxl">
                        <thead>
                            <tr>
                                <th class="text-center">Name</th>
                                <th class="text-center">Email Address</th>
                                <th class="text-center">Number</th>
                                @* <th class="text-center">Password</th> *@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td class="text-center">@user.Fullname</td>
                                    <td class="text-center">@user.Email</td>
                                    <td class="text-center">@user.Pnumber</td>
                                    @* <td class="text-center">@user.Password</td> *@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <!-- Destinations  Table -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Destinations </h5>
                    <table class="table datatable table-hover table-responsive-xxl">
                        <thead>
                            <tr>
                                <th class="text-center">ID</th>
                                <th class="text-center">Name</th>
                                <th class="text-center">Image</th>
                                <th class="text-center">Type</th>
                                <th class="text-center">Manage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dest in Model.Destinations)
                            {
                                <tr>
                                    <td class="text-center text-truncate ">@dest.Did</td>
                                    <td class="text-center ">@dest.Dname</td>
                                    <td class="text-center">
                                        <img class='rounded-2' style='width: 50px;height: 50px;' src="~/uploads/@dest.Dimg" />
                                    </td>
                                    <td class="text-center ">@dest.Dtype</td>
                                    <td class="text-center">
                                        <a asp-action="DeleteDestination" asp-route-id="@dest.Did" onclick="return confirm('Are you sure you want to delete this destination?')" ><i class='bi bi-trash-fill fw-bold fs-5 royalicon'></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Itinerary Table -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Itinerary</h5>
                    <table class="table datatable table-hover table-responsive-xxl">
                        <thead>
                            <tr>
                                <th class="text-center">Day1</th>
                                <th class="text-center">Day2</th>
                                <th class="text-center">Day3</th>
                                <th class="text-center">Day4</th>
                                <th class="text-center">Day5</th>
                                <th class="text-center">Day6</th>
                                <th class="text-center">Day7</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var iti in Model.Itineraries)
                            {
                                <tr>
                                    <td class="text-center text-truncate">@iti.Iday1</td>
                                    <td class="text-center text-truncate">@iti.Iday2</td>
                                    <td class="text-center text-truncate">@iti.Iday3</td>
                                    <td class="text-center text-truncate">@iti.Iday4</td>
                                    <td class="text-center text-truncate">@iti.Iday5</td>
                                    <td class="text-center text-truncate">@iti.Iday6</td>
                                    <td class="text-center text-truncate">@iti.Iday7</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <!-- Activities Table -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Activities</h5>
                    <table class="table datatable table-hover table-responsive-xxl">
                        <thead>
                            <tr>
                                <th class="text-center">Details</th>
                                <th class="text-center">Time</th>
                                <th class="text-center">Location</th>
                                <th class="text-center">Activity</th>
                                <th class="text-center">Image</th>
                                <th class="text-center">Destination Name</th>
                                <th class="text-center">Manage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var activity in Model.Activities)
                            {
                                <tr>
                                    <td class="text-center text-truncate ">@activity.Adetail</td>
                                    <td class="text-center ">@activity.Atime</td>
                                    <td class="text-center ">@activity.Alocation</td>
                                    <td class="text-center ">@activity.Aactivity</td>
                                    <td class="text-center">
                                        <img class='rounded-2' style='width: 50px;height: 50px;' src="~/uploads/@activity.Aimg" />
                                    </td>
                                    <td class="text-center ">@activity.Dname</td>
                                    <td class="text-center">
                                        <a asp-action="DeleteActivity" asp-route-id="@activity.Aid" onclick="return confirm('Are you sure you want to delete this Activity?')"><i class='bi bi-trash-fill fw-bold fs-5 royalicon'></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <!-- Foods Table -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Foods</h5>
                    <table class="table datatable table-hover table-responsive-xxl">
                        <thead>
                            <tr>
                                <th class="text-center">Details</th>
                                <th class="text-center">Location</th>
                                <th class="text-center">Image</th>
                                <th class="text-center">Destination Name</th>
                                <th class="text-center">Manage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var food in Model.Foods)
                            { 
                            <tr>
                                <td class="text-center text-truncate ">@food.Fdetail</td>
                                    <td class="text-center ">@food.Flocation</td>
                                <td class="text-center">
                                        <img class='rounded-2' style='width: 50px;height: 50px;' src="~/uploads/@food.Fimg" />
                                </td>
                                    <td class="text-center ">@food.Dname</td>
                                <td class="text-center">
                                        <a asp-action="DeleteFood" asp-route-id="@food.Fid" onclick="return confirm('Are you sure you want to delete this Food?')"><i class='bi bi-trash-fill fw-bold fs-5 royalicon'></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        

    </div>
</section>
