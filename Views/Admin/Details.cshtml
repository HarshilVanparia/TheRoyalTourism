@model TheRoyalTourism.Models.AdminDataTablesViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Tour Details";
}

<div class="pagetitle">
    <h1>Details</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Dashboard" asp-controller="Admin">Home</a>
            </li>
            <li class="breadcrumb-item active">Details</li>
        </ol>
    </nav>
</div>

<style>
    .tourtags {
        background-color: var(--primery);
        color: white;
        width: fit-content;
        border-radius: 12px;
    }

    .tourlocation {
        background-color: #EEE8F6;
        color: white;
        width: fit-content;
        border-radius: 12px;
    }
</style>

@* Tour Details Page *@

@foreach (var tour in Model.Tour)
{
    <section class="p-2 bg-white rounded-3 shadow-lg mb-4">

        @* 4 images *@
        <div class="d-flex gap-1">
            <div class="col-md-3">
                <img src="~/uploads/@tour.Timg1" width="95%" alt="Sunset">
            </div>
            <div class="col-md-3">
                <img src="~/uploads/@tour.Timg2" width="95%" height="100%" alt="Beach">
            </div>
            <div class="col-md-3">
                <img src="~/uploads/@tour.Timg3" width="95%" alt="Palm Trees">
            </div>
            <div class="col-md-3">
                <img src="~/uploads/@tour.Timg4" width="95%" alt="Restaurant">
            </div>
        </div>
        @* 4 images *@

        <div class="d-flex mt-3 gap-2 justify-content-between">
            <div class="d-flex gap-3 justify-content-start ">
                <div class="d-flex gap-2 tourtags  px-3 py-2">
                    <img src="/Images/tourlocation.svg">
                    <h5 class="mt-1">
                        Pickup - @tour.Tpickup
                    </h5>
                </div>

                <div class="d-flex gap-2 tourlocation  px-3 py-2">
                    <img src="/Images/airtime.svg">
                    <h5 class="mt-1 normal-text">
                        @tour.Tday N
                    </h5>
                </div>
            </div>

            <h4 class="mt-2"><a asp-action="DeleteTour" asp-route-id="@tour.Tid" onclick="return confirm('Are you sure you want to delete this Tour?')" class="main-text fw-bold mt-2">Delete</a></h4>
        </div>

        <div class="mt-3  ">
            <h2 class="main-text fw-bold">@tour.Tname</h2>
        </div>

        <div id="overview" class="mt-4">
            <!-- overview  -->
            <p class="mt-3">
                @tour.Toverview
            </p>

            @* Highlights *@
            <h2 class="main-text mt-4">Tour Highlights</h2>
            <ul>
                @foreach (var item in tour.Thighlights.Split('.', StringSplitOptions.RemoveEmptyEntries))
                {
                    <li class="my-2 mt-4">@item.Trim()</li>
                }
            </ul>
        </div>

    </section>
}
@* Tour Details Page *@

