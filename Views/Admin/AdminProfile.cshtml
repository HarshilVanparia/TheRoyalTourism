@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Profile";
}
<style>
    .active {
        color: #8C387C !important;
        font-weight: 600;
    }
</style>
<section class="section profile">
    <div class="row">

        <div class="col-xl-12">

            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">

                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab"
                                    data-bs-target="#profile-overview">
                                Overview
                            </button>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
                        </li>

                    </ul>
                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-overview" id="profile-overview">

                            <h5 class="card-title">Profile Details</h5>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label ">Full Name</div>
                                <div class="col-lg-9 col-md-8">
                                    @Context.Session.GetString("UserName")
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Email</div>
                                <div class="col-lg-9 col-md-8">
                                    @Context.Session.GetString("UserEmail")
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Number</div>
                                <div class="col-lg-9 col-md-8">
                                    @Context.Session.GetString("Pnumber")
                                </div>
                            </div>
                            @if (TempData["UpdateMessage"] != null)
                            {
                                <div class="alert alert-success text-center">@TempData["UpdateMessage"]</div>
                            }
                        </div>

                        <div class="tab-pane fade profile-edit pt-3" id="profile-edit">

                            <!-- Profile Edit Form -->


                            <form method="post" asp-controller="Admin" asp-action="UpdateAdmin">

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Full Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="FullName" type="text" class="form-control" value="@Context.Session.GetString("UserName")" />
                                        <span id="fn_err"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="Country" class="col-md-4 col-lg-3 col-form-label">Email</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="EmailReadonly" type="text" class="form-control"  value="@Context.Session.GetString("UserEmail")" readonly disabled />
                                        <span id="fn_err"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="Email" class="col-md-4 col-lg-3 col-form-label">Number</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="Pnumber" type="number" class="form-control"  value="@Context.Session.GetString("Pnumber")">
                                    </div>
                                </div>

                                <div class="text-center">
                                    <input type="submit" class="btn royalbutton text-white" name="u_admin" value="Save Changes">
                                </div>
                            </form><!-- End Profile Edit Form -->
                           
                        </div>


                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>

